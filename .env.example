# Clinical Intelligence Engine - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# API Configuration
# ===========================================
VITE_API_URL=http://localhost:3001/api
VITE_API_TIMEOUT=30000
VITE_USE_BACKEND=false

# ===========================================
# AI Services (Client-side for development)
# ===========================================
# For production, move to backend proxy
VITE_GEMINI_API_KEY=your-gemini-api-key

# ===========================================
# Supabase Configuration (Optional)
# ===========================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# ===========================================
# Authentication (Optional - Auth0)
# ===========================================
VITE_AUTH0_DOMAIN=
VITE_AUTH0_CLIENT_ID=

# ===========================================
# Feature Flags
# ===========================================
VITE_ENABLE_PI_DASHBOARD=true
VITE_ENABLE_REALTIME=false
VITE_ENABLE_OFFLINE=true
VITE_ENABLE_CLOUD_EXPORT=false
VITE_ENABLE_COLLABORATION=false

# When true, the app will call a server-side Gemini proxy at `/api/gemini` instead
# of calling Gemini directly from the browser. This is strongly recommended for
# production to avoid exposing API keys client-side.
VITE_USE_GEMINI_PROXY=false

# ===========================================
# Analytics & Monitoring (Optional)
# ===========================================
VITE_SENTRY_DSN=
VITE_ENABLE_SENTRY=false
VITE_MIXPANEL_TOKEN=
VITE_ENABLE_MIXPANEL=false

# ===========================================
# Development
# ===========================================
VITE_DEBUG_LOGS=false
VITE_MOCK_BACKEND=true

# Server-side: Set this (not VITE_) on the proxy server process environment
# GEMINI_API_KEY=your-gemini-api-key
